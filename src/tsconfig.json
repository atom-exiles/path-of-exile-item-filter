{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [ "dom", "es2016" ],
    "outDir": "../dist",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "**/*.ts"
  ]
}
